---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE, SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<!-- Hero 섹션: 모바일에서 크기/여백 대폭 줄임 -->
	<main
		class="app-container flex flex-col gap-8 justify-center py-20 md:py-32 lg:py-36 pt-32 md:pt-44 lg:pt-56 relative"
	>
		<!-- py-36 md:py-48 pt-44 md:pt-56 → 모바일 py-20/pt-32로 줄임 -->
		<div>
			<p class="block text-xl sm:text-2xl lg:text-3xl opacity-70 mt-6 mb-4">Welcome to</p>
			<!-- text-3xl → text-xl sm:text-2xl lg:text-3xl -->
			<h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold leading-none">
				Miro
			</h1>
			<!-- text-8xl → text-5xl부터 점점 커지게 (모바일 60px 내외) -->
		</div>
		<p class="text-lg sm:text-xl lg:text-2xl max-w-2xl font-light leading-normal">
			A blog about math, physics, music, and more.
		</p>
		<div class="flex flex-wrap gap-6 text-lg sm:text-xl">
			<!-- gap-8 → gap-6, text-xl → text-lg sm:text-xl -->
			{
				SocialLinks.map((link) => (
					<a
						class="text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
						href={link.url}
						target="_blank"
					>
						{link.name}
					</a>
				))
			}
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container py-12 md:py-20">
		<h2 class="section-title text-2xl sm:text-3xl">Recent Posts</h2>
		<!-- 제목도 모바일에서 작게 -->
		<div class="posts-grid-container gap-4 md:gap-6">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary text-base sm:text-lg" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={18} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- About & Contact Section -->
	<section class="app-container py-20 md:py-32 grid lg:grid-cols-2 gap-12 lg:gap-20">
		<!-- py-42 → py-20 md:py-32, gap-28 → gap-12 lg:gap-20 -->
		<div class="space-y-6">
			<h2 class="section-title text-2xl sm:text-3xl">About Me</h2>
			<p class="text-base sm:text-lg max-w-xl pb-4">
				A student majoring in mechanical engineering who is interested in math, physics, AI, music, and more.
			</p>
			<a class="btn-secondary text-base sm:text-lg" href={`${SITE_BASE}/about`}
				>Go to About
				<Icon size={18} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title text-2xl sm:text-3xl">Get in touch</h2>
			<p class="text-base sm:text-lg max-w-xl">
				Use the buttons below for my resume & email.
			</p>
			<div class="flex flex-wrap gap-4">
				<a
					class="btn-primary text-base sm:text-lg"
					href="mailto:example@email.com"
					target="_blank"
					>Get in touch
					<Icon height={18} name="mdi:email" />
				</a>
				<a class="btn-secondary text-base sm:text-lg" href="https://example.com" target="_blank"
					>Download Resume
					<Icon height={18} name="mdi:arrow-collapse-down" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
